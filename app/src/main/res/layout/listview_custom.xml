<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="157dp"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="@drawable/calendar_recommend_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="23dp"
        android:paddingRight="22dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일정"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"/>

        <!--햄버거-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="5.6dp"
            android:layout_height="16dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_toggle_2_beige"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingRight="22dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Calendar_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="영화 [디벨럽콜 2]"
            android:layout_gravity="center_vertical"
            android:textSize="17dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="23dp"
        android:paddingRight="22dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_person_dark"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="약속 대상"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="13dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.3"
            android:layout_height="wrap_content"
            android:text="박하나"
            android:id="@+id/Calendar_Name"
            android:layout_gravity="center_vertical"
            android:textSize="13dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="23dp"
        android:paddingRight="22dp"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_clock_dark"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="약속 시간"
            android:layout_marginLeft="5dp"

            android:layout_gravity="center_vertical"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/Calendar_Time"
            android:layout_width="0dp"
            android:layout_weight="2.3"
            android:layout_height="wrap_content"
            android:text="14:00pm"
            android:layout_gravity="center_vertical"
            android:textSize="13dp"/>


    </LinearLayout>




</LinearLayout>
